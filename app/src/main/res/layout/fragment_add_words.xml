<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentAddWords">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/dark_blue">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/myRecy"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchView" />

        <SearchView
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="15dp"
            android:id="@+id/searchView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/search_shape"
            android:backgroundTint="@color/color4"
            android:queryHint="Arama..."
            app:layout_constraintBottom_toTopOf="@+id/myRecy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewKelimelerim" />

        <TextView
            android:id="@+id/textViewKelimelerim"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@drawable/text_shape"
            android:padding="12dp"
            android:text="KELİMELERİM"
            android:textAlignment="center"
            android:textColor="@color/color4"
            android:textSize="28sp"
            android:textStyle=""
            app:layout_constraintBottom_toTopOf="@+id/searchView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginHorizontal="125dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/buttonAddPage"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/buttonshape"
                android:drawableLeft="@drawable/baseline_add_beyaz_24"

                android:padding="12dp"
                android:text="EKLE"
                android:gravity="center"

                android:textColor="@color/color4"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>